@model ShoppingCartViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <h1>My Cart</h1>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.3/toastr.min.js" integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.3/toastr.min.css" integrity="sha512-6S2HWzVFxruDlZxI3sXOZZ4/eJ8AcxkQH1+JjSe/ONCEqR9L4Ysq5JdT5ipqtzU7WHalNwzwBv+iE51gNHJNqQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <partial name="_NotificationsPartial" />

    <script>
        
        toastr.options = {
            positionClass: 'toast-bottom-right', 
            
        };

    </script>

    <style>
        /* Custom Styles */
        body {
            font-family: Arial, sans-serif;
        }

        .toast-container {
            position: fixed;
            bottom: 20px;
            right: 20px;
            width: auto;
            padding: 10px;
        }


        h1 {
            font-size: 48px;
            font-family: cursive;
            margin-top: 1rem;
            color: #141414;
            text-shadow: 8px 6px 5px rgba rgba(0, 0, 0, 0.3);
            background: linear-gradient(to right, white, white);
            background-clip: text;
            display: block;
            text-align: center;
        }

        .cart-container {
            border: 1px solid #ddd;
            padding: 20px;
            margin: 20px 0;
        }

        .cart-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #ddd;
            padding: 10px 0;
        }

        .item-details {
            flex-grow: 1;
        }

        .item-name {
            font-weight: bold;
            margin: 0;
        }

        .item-quantity,
        .item-price {
            margin: 5px 0;
        }

        .remove-btn {
            background-color: #dc3545;
            border: none;
            color: white;
        }

            .remove-btn:hover {
                background-color: #c82333;
            }

        .total-price {
            text-align: right;
            font-weight: bold;
            margin-top: 10px;
        }

        .empty-cart {
            text-align: center;
            padding: 20px;
        }

            .empty-cart img {
                display: block; /* Center the image */
                margin: 0 auto; /* Center horizontally */
                max-width: 100px;
            }

        .fragrance-image {
            max-width: 80px;
            margin-right: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="cart-container">
            @if (Model.CartItems.Any())
            {
                @foreach (var item in Model.CartItems)
                {
                    <div class="cart-item">
                        <div class="item-details">
                            <div class="d-flex align-items-center">
                                <img class="fragrance-image" src="@item.Fragrance.ImageUrl" alt="@item.Fragrance.Name" />
                                <div>
                                    <p class="item-name">@item.Fragrance.Name</p>
                                    <p class="item-quantity">Quantity: @item.Quantity</p>
                                    <p class="item-price">Price: @item.Fragrance.Price</p>
                                </div>
                            </div>
                        </div>
                        <form asp-controller="Cart" asp-action="RemoveFromCart" method="post">
                            <input type="hidden" name="fragranceId" value="@item.FragranceId.ToString()" />
                            <button type="submit" class="remove-btn btn">X</button>
                        </form>
                    </div>
                }
                <div class="total-price">
                    Total Price: @Model.TotalPrice$
                </div>
            }
            else
            {
                <div class="empty-cart">
                    <p>Your cart is empty</p>
                    <img src="https://cdn-icons-png.flaticon.com/512/102/102661.png" alt="Empty Cart Image" />
                </div>
            }
        </div>
    </div>

</body>
</html>