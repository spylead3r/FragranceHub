@model FragrancePreDeleteViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Delete Fragrance</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .delete-container {
            text-align: center;
            margin-top: 50px;
        }

        .fragrance-image {
            max-width: 300px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .delete-btn {
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #e74c3c;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .cancel-btn {
            margin-top: 10px;
            padding: 10px 20px;
            background-color: #ccc;
            color: #333;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="delete-container">
        <h2>Delete Fragrance</h2>
        <h3>Are you sure you want to delete this fragrance?</h3>
        <h4>@Model.Name</h4>
        <img class="fragrance-image" src="@Model.ImageUrl" alt="Fragrance Image" />
        <form method="post">
            <button type="submit" class="delete-btn">Delete</button>
            <a class="cancel-btn" asp-action="Index">Cancel</a>
        </form>
    </div>
</body>
</html>

