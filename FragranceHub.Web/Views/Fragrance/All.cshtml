@model AllFragrancesQueryModel


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/loadmore.css" />


    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        .fragrance-row {
            margin-bottom: 20px;
        }

        .mt-2, .my-2 {
    margin-top: 2.5rem!important;
        }

        .form-control {
        background-color: #f8f9fa;
        }

        h1 {
             font-size: 48px;
            font-family: cursive;
            color: whitesmoke;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3); 
            background: linear-gradient(to right, white, white);
            background-clip: text;
            -webkit-background-clip: text; 
            display: block;
            text-align: center; 

        }

        .flip-card {
            width: 300px;
            height: 300px;
            perspective: 1000px;
        }

        .flip-card-inner {
            position: relative;
            width: 100%;
            height: 100%;
            text-align: center;
            transition: transform 0.6s;
            transform-style: preserve-3d;
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        }

        .flip-card:hover .flip-card-inner {
            transform: rotateY(180deg);
        }

        .flip-card-front, .flip-card-back {
             background-color: black; 
            position: absolute;
            width: 100%;
            height: 100%;
            -webkit-backface-visibility: hidden;
            backface-visibility: hidden;
        }

        .flip-card-front {
                background-color: #bbb;
        color: black;
        border: none;
        border-radius: 8px;
        box-shadow: 20px 20px 10px rgba(0, 0, 0, 0.1);
        background: linear-gradient(45deg, black, black);
        }


                .flip-card-back {
                background-color:black;
        opacity: 0.91;
        color: white;
        transform: rotateY(180deg);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        border: none;
        border-radius: 8px;
        box-shadow: 23px 23px 10px rgba(0, 0, 0, 0.3);
    
        }

        .flip-card-back h1 {
            font-size: 28px; 

        }

        .flip-card-back p {
            font-size: 20px;
            color: white;
        }

        .fragrance-card {
            width: 300px;
            height: 300px;
        }

        .fragrance-title {
            margin-bottom: 50px; 
            margin-top: 3.5rem;
            color:#141414
        }

        .add-to-cart-btn {
            display: inline-block;
            padding: 8px 16px;
            margin-top: 10px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
                margin-bottom: 9px;
        }

        .fragrance-card-column {
            margin-bottom: 50px; 
        }
        

                .fragrance-card {
            margin-bottom: 45px;
        }

        .add-to-wishlist-btn {
        position: absolute;
        top: 10px;
        right: 10px;
        background: none;
        border: none;
        color: #e74c3c; /* Change color as needed */
        font-size: 24px;
        cursor: pointer;
        transition: color 0.3s;
    }

    .add-to-wishlist-btn:hover {
        color: #c0392b; /* Change color on hover */
    }

     
    .details-btn
    .add-to-cart-btn {
        
        margin-top: 1.5rem;
    }

    .flip-card-back h1 {
    font-size: 28px;
    padding-top: 30px;
}
.flip-card-back h1, .flip-card-back p {
    margin-bottom: 0.5rem;
}


    .flip-card-back h1
    .flip-card-back p {
        margin-top: 1.5rem;
    }

    .bg-black {
    background-color: black;
    color: white;
    border: none;
    }


        .col-md-3 .form-group {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .col-md-3 .form-group input[type="submit"] {
            background-color: black;
            color: white;
            border: none;
            padding: 8px 16px;
            margin-left: 52rem;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s, color 0.3s;
        }

    </style>
</head>
<body>

    <h1 class="text-center mt-2 fragrance-title">All Fragrances </h1>



    <form>
        @{
            int previousPage = Model.CurrentPage - 1;
            if (previousPage < 1)
            {
                previousPage = 1;
            }

            int maxPage = (int)Math.Ceiling((double)Model.TotalFragrances /
            Model.FragrancesPerPage);
        }

        <div class="row mb-5">
            <div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-start">
                <select asp-for="Category" class="form-control ml-3 mr-3">
                    <option value="">All</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category">@category</option>
                    }
                </select>
                <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty) bg-black"
                   asp-controller="Fragrance"
                   asp-action="All"
                   asp-route-currentPage="@previousPage"
                   asp-route-category="@Model.Category"
                   asp-route-searchTerm="@Model.SearchString"
                   asp-route-sorting="@((int)Model.FragranceSorting)"><<</a>
            </div>

            @{
                bool shouldNextPageBeDisabled = Model.CurrentPage == maxPage || !Model.Fragrances.Any();
            }

            <div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-end">
                <a class="btn btn-primary @(shouldNextPageBeDisabled ? "disabled" : string.Empty) bg-black"
                   asp-controller="Fragrance"
                   asp-action="All"
                   asp-route-currentPage="@(Model.CurrentPage + 1)"
                   asp-route-category="@Model.Category"
                   asp-route-searchTerm="@Model.SearchString"
                   asp-route-sorting="@((int)Model.FragranceSorting)">>></a>
                <select asp-for="FragranceSorting" class="form-control ml-3 mr-3">
                    <option value="0">Price (Ascending)</option>
                    <option value="1">Price (Descending)</option>
                </select>
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group mt-4 p-2">
                <input type="submit" value="Filter" class="btn btn-primary"/>
            </div>
        </div>
    </form>
   


@if (!Model.Fragrances.Any())
 {
    <h2 class="text-center">No fragrances found by the given criteria!</h2>
 }


            <div class="container-fluid">
        <div class="row box-container mt-lg-5">
            @foreach (var fragrance in Model.Fragrances)
            {
                <div class="col-lg-4 col-md-6 col-sm-12 fragrance-card">
                    <div class="flip-card fragrance-card">
                        <div class="flip-card-inner">
                            <div class="flip-card-front">
                                <img src="@fragrance.ImageUrl" alt="@fragrance.Name" style="width:300px;height:300px;">
                            </div>
                            <div class="flip-card-back">
                                <h1>@fragrance.Name</h1>
                                <p>Price: @fragrance.Price</p>
                                <button class="add-to-wishlist-btn" data-fragrance-id="@fragrance.Id">
                                    <div class="heart-icon-container">
                                        <i class="fas fa-heart"></i>
                                    </div>
                                </button>
                                <button class="add-to-cart-btn">Add to Cart</button>
                                <button class="details-btn btn btn-secondary">Details</button>
                                <partial name="_FragrancePartial" model="@fragrance" />
                            </div>
                        </div>
                    </div>
                </div>
            }

                </div>
            </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const wishlistButtons = document.querySelectorAll(".add-to-wishlist-btn");
            wishlistButtons.forEach(button => {
                button.addEventListener("click", async function () {
                    const fragranceId = button.getAttribute("data-fragrance-id");
                    const heartIcon = button.querySelector(".fas.fa-heart");

                    // Toggle the class to show/hide the heart icon
                    heartIcon.classList.toggle("active");

                    try {
                        const response = await fetch(`/Wishlist/AddToFavorites?fragranceId=${fragranceId}`, {
                            method: "POST",
                            headers: {
                                "Content-Type": "application/json"
                            }
                        });

                        if (!response.ok) {
                            // Handle error cases
                            console.error("Failed to add fragrance to wishlist.");
                        }
                    } catch (error) {
                        // Handle network or other errors
                        console.error("An error occurred while adding fragrance to wishlist:", error);
                    }
                });
            });
        });

    </script>

</body>
</html>